<table class="<%= table_css_classes %>" data-table="inline">
  <thead>
    <tr>
      <th class="ca" width="5%"><%= _('Power') %></th>
      <th width="25%"><%= _('Name') %></th>
      <th><%= _('IP Address') %></th>
      <th><%= _('Connection State') %></th>
    </tr>
  </thead>
  <tbody>
    <% @hosts.each do |host| %>
      <tr>
        <td class="ca">
          <span title="<%= host.power_state %>" class="fa fa-power-off host-power-status <%= host.power_state %>"</span> 
        </td>
        <td class="ellipsis"><%= host.name %></td>
        <td><%= host.ipaddress %></td>
        <td><%= host.connection_state %></td>
      </tr>
    <% end %>
  </tbody>
</table>
